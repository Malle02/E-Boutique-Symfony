{% extends 'base.html.twig' %}

{% block title %}Votre Panier - Mandingue-Chic{% endblock %}

{% block body %}
    <section class="text-black py-16 text-center">
        <h1 class="text-5xl font-bold mb-6 text-white mt-8">üõí Votre Panier</h1>

        {% if cart|length == 0 %}
            <p class="text-black-600 text-lg">Votre panier est vide.</p>
        {% else %}
            <div class="overflow-x-auto">
                <table class="w-full max-w-4xl mx-auto border-collapse bg-white shadow-md rounded-lg overflow-hidden">
                    <thead class="bg-yellow-500 text-white">
                        <tr>
                            <th class="py-3 px-6">Produit</th>
                            <th class="py-3 px-6">Quantit√©</th>
                            <th class="py-3 px-6">Prix Unitaire</th>
                            <th class="py-3 px-6">Total</th>
                            <th class="py-3 px-6">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for item in cart %}
                            <tr class="border-b hover:bg-gray-100 transition">
                           
                            <td class="py-3 px-6">
                             {{ item.product.name }}
                                <img src="{{ asset('uploads/products/' ~ item.product.image) }}" alt="{{ item.product.name }}"
                                    class="h-5 w-5 object-cover rounded shadow">
                            </td>
                                
                                <td class="py-3 px-6">{{ item.quantity }}</td>
                                <td class="py-3 px-6">{{ (item.product.price / 100)|number_format(2, ',', ' ') }} ‚Ç¨</td>
                                <td class="py-3 px-6">{{ ((item.product.price * item.quantity)/100)|number_format(2, ',', ' ')  }} ‚Ç¨</td>
                                <td class="py-3 px-6">
                                    <a href="{{ path('cart_add', {id: item.product.id}) }}" class="text-green-500 text-xl">‚ûï</a>
                                    <a href="{{ path('cart_decrease', {id: item.product.id}) }}" class="text-yellow-500 text-xl">‚ûñ</a>
                                    <a href="{{ path('cart_remove', {id: item.product.id}) }}" class="text-red-500 text-xl">‚ùå</a>
                                </td>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
            
            <h3 class="text-2xl font-bold mt-6 ">Total : <span class="text-yellow-500">{{ (total /100)|number_format(2, ',', ' ') }} ‚Ç¨</span></h3>
            <a href="{{ path('order_confirm') }}" class="mt-4 inline-block bg-yellow-500 text-black font-semibold py-3 px-6 rounded-lg shadow-lg hover:bg-yellow-600 hover:shadow-xl transition">
                Passer commande
            </a>
        {% endif %}
    </section>
{% endblock %}
